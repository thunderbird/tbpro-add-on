{
  "manifest_version": 2,
  "version": "0.8.5",
  "author": "Thunderbird Team",
  "name": "Tbpro Addon",
  "description": "Thunderbird and friends",
  "browser_specific_settings": {
    "gecko": {
      "id": "tbpro-add-on@thunderbird.net",
      "strict_min_version": "128.0",
      "strict_max_version": "150.*"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "default_locale": "en",
  "options_ui": {
    "page": "index.management.html",
    "open_in_tab": true,
    "browser_style": true
  },
  "cloud_file": {
    "name": "Tbpro Addon",
    "management_url": "index.management.html",
    "browser_style": true,
    "reuse_uploads": false
  },
  "icons": {
    "64": "icons/64.png"
  },
  "permissions": [
    "storage",
    "compose",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "messagesRead",
    "sensitiveDataUpload",
    "https://*.backblazeb2.com/*"
  ],
  "experiment_apis": {
    "MailAccounts": {
      "schema": "api/MailAccounts/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["MailAccounts"]],
        "script": "api/MailAccounts/implementation.js"
      }
    },
    "TBProMenu": {
      "schema": "api/TBProMenu/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["TBProMenu"]],
        "script": "api/TBProMenu/implementation.js"
      }
    }
  }
}
