{
  "extends": "tbpro-shared/tsconfig.client.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@addon/*": ["./src/*"],
      "prisma/*": ["../send/backend/node_modules/@prisma/*"],
      "@send-backend/*": ["../send/backend/src/*"],
      "@send-frontend/*": ["node_modules/send-frontend/src/*"],
      "send-frontend/*": ["node_modules/send-frontend/*"]
    },
    "types": ["vite/client", "vitest/globals", "@types/firefox-webext-browser"]
  },
  "include": ["src/**/*", "src/env.d.ts"],
  "exclude": ["node_modules", "dist", "build", "../send/**/*"]
}
