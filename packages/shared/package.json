{
  "name": "tbpro-shared",
  "version": "0.2.1",
  "private": false,
  "type": "module",
  "description": "Shared code for tbpro add-on",
  "main": "src/index",
  "types": "src/index.ts",
  "scripts": {
    "build:shared": "tsc",
    "ci:validate": "pnpm lint:all; pnpm prettier:all",
    "test": "VITE_TESTING=true vitest run --silent",
    "test-debug": "VITE_TESTING=true vitest --inspect-brk --single-thread",
    "test:watch": "VITE_TESTING=true vitest --watch",
    "lint:all": "pnpx eslint . --fix --ignore-pattern 'dist/*'",
    "prettier:all": "pnpm prettier --write .",
    "postinstall": "pnpm build:shared"
  },
  "dependencies": {
    "@tanstack/vue-query": "*",
    "dayjs": "*",
    "get-random-values": "^3.0.0",
    "oidc-client-ts": "^3.3.0",
    "pinia": "*",
    "vue": "*"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/node": "*",
    "@types/thunderbird-webext-browser": "^127.0.0",
    "@typescript-eslint/parser": "^8.29.1",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vitest/coverage-v8": "*",
    "dotenv": "*",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.33.0",
    "globals": "^15.15.0",
    "prettier": "^3.5.3",
    "typescript": "*",
    "typescript-eslint": "^8.29.1",
    "vite": "*",
    "vitest": "*",
    "webextension-polyfill": "^0.12.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.7.1",
  "exports": {
    ".": {
      "import": "./src/index",
      "require": "./src/index"
    },
    "./tsconfig.client.base.json": "./dist/tsconfig.client.base.json"
  }
}
