{
  "extends": "./tsconfig.client.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "allowJs": true,
    "resolveJsonModule": true,
    "allowArbitraryExtensions": true,
    "types": ["vite/client", "vitest/globals", "@types/firefox-webext-browser"],
    "paths": {
      "@shared/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "src/env.d.ts", "tsconfig.client.base.json"],
  "exclude": ["node_modules", "dist", "build", "**/tests/**"]
}
